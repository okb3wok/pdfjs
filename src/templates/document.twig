{% extends "./base.twig" %}


{% block content %}
  <section class="bg-gray-50 dark:bg-gray-900">
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto ">


      <h2 style="text-align: center;">Документ {{ document.name }}</h2>
      <div id="pdf-container" class="max-h-[calc(100vh_-_245px)] overflow-y-scroll "></div>

      <form class="space-y-4 md:space-y-6" action="/document/{{ document.id }}" method="post">
        <input type="hidden" name="signDocId" value="{{ document.id }}">
        <input type="hidden" id="tempUrl" value="{{ document.tempUrl }}">
        {% if document.signed==false %}
        <button type="submit" class="text-white bg-gradient-to-r from-green-400 via-green-500
      to-green-600 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300
       dark:focus:ring-green-800 shadow-lg shadow-green-500/50 dark:shadow-lg dark:shadow-green-800/80
        font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 cursor-pointer">Подписать документ</button>
        {% endif %}
      </form>
    </div>
  </section>
{% endblock %}
